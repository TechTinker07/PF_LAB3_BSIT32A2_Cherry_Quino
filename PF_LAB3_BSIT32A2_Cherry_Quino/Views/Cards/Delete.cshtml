@model PF_LAB3_BSIT32A2_Cherry_Quino.Models.Card

@{
    ViewData["Title"] = "Delete Card";
}

<h1>Delete Confirmation</h1>

<h3>Are you sure you want to delete this card?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Rarity</dt>
        <dd class="col-sm-10">@Model.Rarity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CharacterImageUrl))
            {
                <img src="@Model.CharacterImageUrl" alt="@Model.Name" style="height:150px;" />
            }
        </dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

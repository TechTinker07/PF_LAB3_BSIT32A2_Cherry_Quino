@model IEnumerable<PF_LAB3_BSIT32A2_Cherry_Quino.Models.Card>

@{
    ViewData["Title"] = "Cards";
}

<h1>Cards</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Card</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 150px;" class="text-center">Name</th>
            <th style="width: 100px;" class="text-center">Rarity</th>
            <th style="width: 200px;" class="text-center">Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.Name</td>
                <td class="text-center">@item.Rarity</td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.CharacterImageUrl))
                    {
                        <img src="@item.CharacterImageUrl"
                             alt="@item.Name"
                             class="img-fluid rounded shadow-lg"
                             style="max-height: 300px; max-width: 300px; border: 5px solid #66bb6a;" />
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
